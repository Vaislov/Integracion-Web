@model WebApplication10.Models.FacturaData

@{
    ViewBag.Title = "Generar Venta";
}
@{
    var now = DateTime.Now;
}
<div class="col-lg-9">
    <h2>Venta</h2>

</div>

<div class="col-lg-3" style="padding-top:3rem">
    <time datetime="@now.ToString("o")" pubdate>@now.ToLongDateString()</time>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    <br />
    <h4>Datos de la Venta</h4>
    <hr />
    <div class="form-group">
        <label class="control-label col-md-2" for="Vendedor"> Vendedor: </label>
        <div class="col-md-10">
            <input class="form-control" type="text" name="Vendedor" value="Anderson Estela Coronel" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="Libros"> Libros: </label>
        <div class="col-md-10">
            @Html.DropDownList("Libros", (List<SelectListItem>)ViewBag.opciones, null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="Cantidad"> Cantidad: </label>
        <div class="col-lg-2">
            <input class="form-control" type="number" min="0" name="Cantidad" value="" />
        </div>
    </div>
    <div style="display:flex; justify-content: space-between">
        <div class="col-6 col-lg-offset-1">
            <label class="control-label col-md-3" for="Precio"> Precio(S/.): </label>
            <div class="col-lg-6">
                <input class="form-control" type="number" name="Precio" value="43" readonly />
            </div>
        </div>
        <div class="form-group col-6 col-lg-offset-2">
            <div class=" col-lg-6">
                <input type="submit" value="Agregar" class="btn btn-warning" />
            </div>
        </div>

    </div>
    

    <br />
    <div style="margin-left:5rem; margin-right:5rem; margin-bottom:5rem">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th width="60%" scope="col">Libro</th>
                    <th width="10%" scope="col">Cantidad</th>
                    <th width="10%" scope="col">Precio</th>
                    <th width="20%" scope="col">Opcion</th>
                </tr>
            </thead>
            <tbody>
                @*<tr>
                        <th scope="row">3</th>
                        <td>Larry</td>
                        <td>the Bird</td>
                        <td>dswitter</td>
                    </tr>*@
            </tbody>
        </table>


    </div>



    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class=" col-md-10">
            <input type="submit" value="Generar" class="btn btn-success" />
        </div>
    </div>
</div>

}
<div>
    @Html.ActionLink("Atrás", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
